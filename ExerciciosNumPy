import numpy as np

#Sola valçores do array +2
array = np.array ([1, 2, 3, 4, 5])
print(array+2)

#Multiplica array por 3
print(array * 3)

#Soma 2 arrays
array2 = np.array([6, 7, 8, 9, 10])
somaArray = array + array2
print(somaArray)

#Media e desvio padrão
media = np.mean(array)
desvio = np.std(array)

print(f"A mediia é: {media}")
print(f"O desvio é: {desvio}")

#Exibe pares do array
print(array[array % 2 == 0])
